#include <Keypad.h>
const byte COLS = 4; 
const byte ROWS = 4; 
char hexaKeys[ROWS][COLS]={
{'1','4','7','*'},
{'2','5','8','0'},
{'3','6','9','#'},
{'A','B','C','D'}
};

byte colPins[COLS] = {13,12,11,10};
byte rowPins[ROWS] = {5,4,3,2};
char Taste;
Keypad Tastenfeld = Keypad(makeKeymap(hexaKeys), rowPins, colPins, ROWS, COLS);
int pos = 0;

void setup(){
  
  Serial.begin(9600);
  pinMode(8, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
}

void loop(){
  
  Taste = Tastenfeld.getKey(); 
  if (Taste){
    if (Taste =='1') {
      tone(6, 261, 200); 
      delay(300); 
    } else if (Taste=='2'){
      tone(7, 294, 200); 
      delay(300); 
    }else if (Taste=='3'){
      tone(8, 329, 200); 
      delay(300); 
    }else if (Taste=='A'){
      tone(6, 349, 200); 
      delay(300); 
    }else if (Taste=='4'){
      tone(7, 392, 200); 
      delay(300); 
    }else if (Taste=='5'){
      tone(8, 440, 200); 
      delay(300); 
    }else if (Taste=='6'){
      tone(6, 493, 200); 
      delay(300); 
    }else if (Taste=='B'){
      tone(7, 523, 200); 
      delay(300); 
    }else if (Taste=='7'){
      tone(8, 563, 200); 
      delay(300); 
    }else if (Taste=='8'){
      tone(6, 603, 200); 
      delay(300); 
    }else if (Taste=='9'){
      tone(7, 643, 200); 
      delay(300); 
    }else if (Taste=='C'){
      tone(8, 693, 200); 
      delay(300); 
    }else if (Taste=='*'){
      tone(6, 733, 200); 
      delay(300); 
    }else if (Taste=='0'){
      tone(7, 783, 200); 
      delay(300); 
    }else if (Taste=='#'){
      tone(8, 823, 200); 
      delay(300); 
    }else if (Taste=='D'){
      tone(6, 873, 200); 
      delay(300); 
    }
  }
}
